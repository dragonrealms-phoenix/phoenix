{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/common/**/*",
    "src/preload/**/*",
    "src/main/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "types": [
      "electron-vite/node"
    ],
  }
}
