{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/common/**/*",
    "src/preload/*.d.ts",
    "src/renderer/src/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "types": [
      "jest",
    ],
  }
}
